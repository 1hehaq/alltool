{
  "tasks": {
    "subenum": {
      "tools": ["subfinder", "amass", "assetfinder"]
    },
    "portscan": {
      "tools": ["nmap", "masscan"]
    },
    "vulnscan": {
      "tools": ["nuclei", "nessus"]
    }
  },
  "tools": {
    "subfinder": {
      "command": "subfinder",
      "default_args": ["-silent", "-recursive", "-d"]
    },
    "amass": {
      "command": "amass",
      "default_args": ["enum", "-passive"]
    },
    "assetfinder": {
      "command": "assetfinder",
      "default_args": ["-subs-only"]
    },
    "nmap": {
      "command": "nmap",
      "default_args": ["-sV", "-sC"]
    },
    "masscan": {
      "command": "masscan",
      "default_args": ["-p0-65535", "--rate=1000"]
    },
    "nuclei": {
      "command": "nuclei",
      "default_args": ["-severity", "medium,high,critical"]
    },
    "nessus": {
      "command": "nessus_cli",
      "default_args": ["--scan-type", "basic"]
    }
  }
}
